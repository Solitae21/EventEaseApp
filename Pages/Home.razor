@page "/"
@inject NavigationManager NavManager
@using EventEaseApp.Services
@inject AuthService Auth

<PageTitle>Home</PageTitle>



<div class="home-container">
    <h1>Welcome to EventEase 🎉</h1>
    <p>Your go-to platform for managing and attending exciting corporate and social events.</p>

    <button class="btn btn-primary" @onclick="GoToEvents">Browse Events</button>
</div>

@code {
    private void GoToEvents()
    {
        if (Auth.IsLoggedIn)
        {
            NavManager.NavigateTo("/events"); // Redirects to Events List
        }
        else
        {
            NavManager.NavigateTo("/login"); // Redirects to Login Page
        }
    }
}
