@page "/events"
@using EventEaseApp.Models
@using EventEaseApp.Shared

<h1>Upcoming Events</h1>
@foreach (var eventItem in events)
{
    <EventCard EventName="@eventItem.Name" EventDate="@eventItem.Date" Location="@eventItem.Location" />
}

@code {
    private List<Event> events = new()
    {
        new Event { Name = "Tech Summit 2025", Date = new DateTime(2025, 6, 10), Location = "Manila", Description = "A premier technology conference." },
        new Event { Name = "Business Expo", Date = new DateTime(2025, 7, 22), Location = "Quezon City", Description = "Showcasing innovation in business." },
        new Event { Name = "Startup Conclave", Date = new DateTime(2025, 8, 15), Location = "Makati", Description = "Connecting startup founders and investors." }
    };
}
