@using System.ComponentModel.DataAnnotations
@page "/register"
<h3 class="mb-3">Event Registration</h3>
<EditForm Model="registrationModel" OnValidSubmit="HandleSubmit">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="mb-3">
        <label for="name">Name:</label>
        <InputText id="name" @bind-Value="registrationModel.Name" class="form-control" />
    </div>

    <div class="mb-3">
        <label for="email">Email:</label>
        <InputText id="email" @bind-Value="registrationModel.Email" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Register</button>
</EditForm>

@if (isRegistered)
{
    <div class="alert alert-success mt-3">
        Successfully registered: @registeredName (@registeredEmail)
    </div>
}

@code {
    private RegistrationModel registrationModel = new RegistrationModel();
    private bool isRegistered = false;
    private string registeredName = "";
    private string registeredEmail = "";

    private void HandleSubmit()
    {
        registeredName = registrationModel.Name;
        registeredEmail = registrationModel.Email;
        isRegistered = true;

        // Clear the form after successful registration
        registrationModel = new RegistrationModel();
        Console.WriteLine($"Registered: {registeredName} - {registeredEmail}");
    }

    public class RegistrationModel
    {
        [Required(ErrorMessage = "Name is required")]
        public string Name { get; set; } = string.Empty;

        [Required(ErrorMessage = "Email is required")]
        [EmailAddress(ErrorMessage = "Invalid email address")]
        public string Email { get; set; } = string.Empty;
    }
}
